<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">

	<servlet>
		<servlet-name>BeerExeprtControllerServlet</servlet-name>
		<servlet-class>org.nir.controllers.BeerExeprtControllerServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>BeerExeprtControllerServlet</servlet-name>
		<url-pattern>/SelectBeer.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>LoginControllerServlet</servlet-name>
		<servlet-class>org.nir.controllers.LoginControllerServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>LoginControllerServlet</servlet-name>
		<url-pattern>/login.do</url-pattern>
	</servlet-mapping>
</web-app>